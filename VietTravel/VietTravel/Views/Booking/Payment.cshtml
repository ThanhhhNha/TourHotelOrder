            }

    .order-summary-details {
        font-size: 16px;
        line-height: 1.6;
    }

        .order-summary-details h5 {
            font-size: 18px;
            color: #007bff;
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

            .order-summary-details h5 i {
                margin-right: 10px;
            }

        .order-summary-details p {
            margin: 8px 0;
        }

            .order-summary-details p span {
                font-weight: 500;
