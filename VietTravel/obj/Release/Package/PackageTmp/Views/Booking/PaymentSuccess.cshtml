@{
    ViewBag.Title = "PaymentSuccess";
}

<div class="containerpayment">
    <div class="steps">
        <div class="inactive">
            <span>1</span>
            <p>NHẬP THÔNG TIN</p>
        </div>
        <div class="inactive">
            <span>2</span>
            <p>THANH TOÁN</p>
        </div>
        <div class="active">
            <span>3</span>
            <p>HOÀN TẤT</p>
        </div>
    </div>
    <div class="success-message">
        <h2>Thanh toán thành công!</h2>
        <p>Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi.</p>
    </div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <button type="button" class="back-btn" onclick="window.location.href='@Url.Action("Home", "Home")'">Quay lại trang chủ</button>

</div>
<style>
    .containerpayment {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 50px auto;
        text-align: center;
    }
    .steps {
      display: flex;
      justify-content: space-between;
      margin-bottom: 30px;
  }

      .steps div {
          flex: 1;
          text-align: center;
      }

      .steps .active {
          font-weight: bold;
          color: #007bff;
      }

      .steps .inactive {
          color: #999;
      }

