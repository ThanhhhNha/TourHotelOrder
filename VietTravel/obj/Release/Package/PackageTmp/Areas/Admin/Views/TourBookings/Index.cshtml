@model IEnumerable<VietTravel.Models.TourBooking>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="containermain">
    <h2>Quản Lý Đặt Tour</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Email</th>
                    <th>Số Điện Thoại</th>
                    <th>Tiêu Đề</th>
                    <th>Họ Tên</th>
                    <th>Ngày Sinh</th>
                    <th>Yêu Cầu</th>
                    <th>Phương Thức Thanh Toán</th>
                    <th>Tên Tour</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Dob)</td>
                        <td>@Html.DisplayFor(modelItem => item.Requests)</td>
                        <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tour.TenTour)</td>
                        <td style="display:flex;">
                            <a href="@Url.Action("Edit", "TourBookings", new { id = item.BookingId })" class="btn btn-primarys">
                                Chỉnh sửa
                            </a>
                            <a href="@Url.Action("Details", "TourBookings", new { id = item.BookingId })" class="btn btn-primarys">
                                Chi tiết
                            </a>
                            <a href="@Url.Action("Delete", "TourBookings", new { id = item.BookingId })" class="btn btn-primarys">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="form-group" style="display: flex; margin-top: 30px;">
        <div class="col-md-offset-2 col-md-6">
            <a href="@Url.Action("AdminHome", "Account")" class="btn btn-primarys">
                Quay lại
            </a>
        </div>
        <div class="col-md-offset-2 col-md-6" style="display: flex; justify-content: flex-end">
            <a href="@Url.Action("Create", "TourBookings")" class="btn btn-primarys" style="width:auto;">
                Thêm 
            </a>
        </div>
    </div>
</div>

<style>
    .containermain {
        margin: 20px;
    }

    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: center;
            border: 1px solid #ddd;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table th {
        background-color: #154583;
        color: white;
    }

    .btn-primarys {
        margin-right: 10px;
        background-color: #154583;
        color: #fff;
        text-decoration: none;
        text-align: center;
        padding: 10px 15px;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease, transform 0.2s;
    }

        .btn-primarys:hover {
            color: #f5f5f5;
            text-align: center;
            background-color: #6f6f6f;
            cursor: pointer;
            transform: scale(1.05);
        }

    .form-group {
        margin: 10px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>
