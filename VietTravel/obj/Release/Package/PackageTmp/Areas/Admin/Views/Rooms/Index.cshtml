@model IEnumerable<VietTravel.Models.Phong>

@{
    ViewBag.Title = "Quản lý phòng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="containermain">
    <h2>Quản lý phòng</h2>

    <div class="form-group" style="margin-bottom: 20px;">
        <a href="@Url.Action("Create", "Rooms")" class="btn btn-primarys">
            Tạo mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Giá</th>
                    <th>Hình ảnh</th>
                    <th>Tên khách sạn</th>
                    <th>Loại phòng</th>
                    <th>Trạng thái phòng</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@String.Format("{0:N0} VND", item.Gia)</td>
                        <td><img src="@Url.Content("~/image/phong/" + item.Hinh)" alt="Hình ảnh phòng" style="width:100px; height:auto;" /></td>
                        <td>@Html.DisplayFor(modelItem => item.Hotel.TenKhachSan)</td>
                        <td>@Html.DisplayFor(modelItem => item.LoaiPhong.TenLoai)</td>
                        <td>@Html.DisplayFor(modelItem => item.TrangThaiPhong.TenTrangThai)</td>
                        <td style="display:flex;">
                            <a href="@Url.Action("Edit", "Rooms", new { id = item.MaPhong })" class="btn btn-primarys">Chỉnh sửa</a>
                            <a href="@Url.Action("Details", "Rooms", new { id = item.MaPhong })" class="btn btn-primarys">Chi tiết</a>
                            <a href="@Url.Action("Delete", "Rooms", new { id = item.MaPhong })" class="btn btn-primarys">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .containermain {
        margin: 20px;
    }

    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: center;
            border: 1px solid #ddd;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table th {
        background-color: #154583;
        color: white;
    }

    .btn-primarys {
        margin-right: 10px;
        background-color: #154583;
        color: #fff;
        text-decoration: none;
        text-align: center;
        padding: 10px 15px;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease, transform 0.2s;
    }

        .btn-primarys:hover {
            color: #f5f5f5;
            text-align: center;
            background-color: #6f6f6f;
            cursor: pointer;
            transform: scale(1.05);
        }

    .form-group {
        margin: 10px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>
