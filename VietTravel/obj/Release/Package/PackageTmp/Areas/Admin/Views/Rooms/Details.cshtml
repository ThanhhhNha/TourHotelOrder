@model VietTravel.Models.Phong

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chi tiết Phòng</h2>
    <div class="order-details">
        <h4>Phòng</h4>
        <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Gia)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Gia)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Hinh)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Hinh)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Hotel.TenKhachSan)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Hotel.TenKhachSan)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.LoaiPhong.TenLoai)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LoaiPhong.TenLoai)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TrangThaiPhong.TenTrangThai)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TrangThaiPhong.TenTrangThai)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.User.TenUser)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.User.TenUser)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaPhong }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-secondary" })
        </p>
        <style>
            body {
                background-color: #f8f9fa;
                font-family: Arial, sans-serif;
            }

            h2 {
                text-align: center;
                color: #343a40;
                font-weight: 700;
                margin-bottom: 20px;
            }

            hr {
                margin: 5px;
                border-top: 2px solid #ddd;
            }

            .order-details, .tour-details {
                max-width: 800px;
                margin: 0 auto;
                padding: 20px;
                background-color: #f9f9f9;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .dl-horizontal {
                display: flex;
                flex-wrap: wrap;
                margin-bottom: 1.5rem;
            }

                .dl-horizontal dt {
                    font-weight: bold;
                    color: #444;
                    width: 30%;
                    margin-bottom: 10px;
                }

                .dl-horizontal dd {
                    width: 70%;
                    margin-bottom: 10px;
                    color: #666;
                }

            a {
                color: #007bff;
                text-decoration: none;
                transition: color 0.2s;
            }

                a:hover {
                    text-decoration: underline;
                    color: #0056b3;
                }

            p {
                text-align: center;
                margin-top: 20px;
                font-size: 16px;
            }

            .btn {
                display: inline-block;
                padding: 10px 20px;
                margin: 5px;
                font-size: 16px;
                font-weight: bold;
                text-align: center;
                text-decoration: none;
                border: none;
                border-radius: 5px;
                color: white;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

            .btn-primary {
                background-color: #154583;
            }

            .btn-secondary {
                background-color: #6c757d;
            }

            .btn:hover {
                text-decoration: none;
                opacity: 0.9;
            }
        </style>

